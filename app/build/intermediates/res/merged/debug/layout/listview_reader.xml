<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/listview_title_vertical_padding"
    android:paddingTop="@dimen/listview_title_vertical_padding" >

    <TextView
        android:id="@+id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tech_info"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web|email"
        android:paddingLeft="@dimen/listview_title_horizontal_padding"
        android:text="@string/app_name" />

</LinearLayout>